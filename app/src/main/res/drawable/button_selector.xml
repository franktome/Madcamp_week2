<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 버튼이 눌렸을 때의 상태 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF0000" /> <!-- 눌렸을 때의 배경색 -->
            <corners android:radius="8dp" /> <!-- 눌렸을 때의 모서리 둥글기 -->
        </shape>
    </item>

    <!-- 버튼의 일반 상태 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00FF00" /> <!-- 일반 상태의 배경색 -->
            <corners android:radius="8dp" /> <!-- 일반 상태의 모서리 둥글기 -->
        </shape>
    </item>

</selector>